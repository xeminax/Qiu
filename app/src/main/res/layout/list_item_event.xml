<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/tools"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/list_item_group_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:clickable="true"

            android:paddingTop="8dp"
            card_view:srcCompat="@drawable/smile"/>

        <TextView
            android:id="@+id/list_item_group_name"
            style="?android:listSeparatorTextViewStyle"
            android:layout_marginTop="16dp"

            android:layout_toRightOf="@+id/list_item_group_profile"
            android:paddingBottom="16dp"
            android:text="自行车"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/list_item_event_title_view"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_group_profile"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"

            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/list_item_event_date_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_title_view"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"



            android:text="@string/event_time_label"

            />

        <TextView
            android:id="@+id/list_item_event_date_view"
            android:layout_toRightOf="@+id/list_item_event_date_label"
            android:layout_below="@+id/list_item_event_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/list_item_event_place_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_date_label"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"



            android:text="@string/event_place_label"

            />
        <TextView
            android:id="@+id/list_item_event_place_view"
            android:layout_below="@+id/list_item_event_date_label"
            android:layout_toRightOf="@+id/list_item_event_place_label"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/list_item_event_content_view"
            android:layout_below="@+id/list_item_event_place_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"


            />

        <ImageView
            android:id="@+id/list_item_event_image_view"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"


            android:layout_below="@+id/list_item_event_content_view"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            card_view:srcCompat="@drawable/add_image"/>



        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_image_view"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            card_view:srcCompat="@drawable/person_attend"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_image_view"
            android:paddingTop="8dp"
            android:layout_toRightOf="@+id/imageView7"
            android:paddingLeft="4dp"
            android:paddingBottom="8dp"
            android:text="3"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_event_image_view"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/imageView7"
            android:background="@drawable/attent_selector"
            android:clickable="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>